<p>Your poll has been created!</p>

<p>Here's your link to share:</p>
<%= link_to 'Your poll', vote_poll_path(@poll) %>
<p>Or send poll via email:</p>

<% Recipient.all.each do |recipient| %>
    <%= form_for recipient do |f| %>
        <div id="recipient_emails">
            <%= f.label :email %>
            <%= f.text_field :email %>
        </div>
    <% end %>
<% end %>

<% end %>


