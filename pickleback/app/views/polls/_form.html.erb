<%if flash[:notice]%>
  <%=flash[:notice]%>
<%end%>

<%=form_for @poll do |f|%>
  <div id="question">
    <%=f.label :question%>
    <%=f.text_field :question%>
  </div>

  <div id="options">
    Answers<br>
    <%@poll.options.each do |option|%>
      <%= f.fields_for 'options_attributes[]', option do |option_form| %>
        <%= option_form.text_field :answer %> <br>
      <%end%>
    <%end%>
  </div>

  <div class= "action">
      <%=f.submit%>
  </div>
<%end%>