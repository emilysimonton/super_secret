<%if flash[:notice]%>
  <%=flash[:notice]%>
<%end%>

<%=form_for @poll do |f|%>
  <div id="question">
    <%=f.label :question%>
    <%=f.text_field :question%>
    <%= f.label :filepicker_url, "Add an image" %>
    <%= f.filepicker_field :filepicker_url %> <!-- Poll#filepicker_url is a regular string column -->
  </div>

  <div id="options">
    Answers<br>
    <%@poll.options.each do |option|%>
      <%= f.fields_for 'options_attributes[]', option do |option_form| %>
        <%= option_form.text_field :answer %> <br>
      <%end%>
    <%end%>
  </div>

  <div id="expiration">
  Expiration<br>
  <%=f.datetime_local_field :expiration%><br>
  </div>

  <div class= "action">
      <%=f.submit%>
  </div>
<%end%>
