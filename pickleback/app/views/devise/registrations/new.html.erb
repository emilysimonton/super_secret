<section id="sign_up">
<div class="section-form">
<div class="col-md-6">
  <h3>Sign up</h3>
  <form role="form">
    <div class="form-group">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
      <div class="form-group">
        <%=f.label :name %></br>
        <%= f.text_field :name, autofocus: true, :class=> "form-control", :placeholder => "Enter name" %>
      </div>
      <div class="form-group">
        <%=f.label :email %></br>
        <%= f.email_field :email, autofocus: true, :class=> "form-control", :placeholder => "Enter email" %>
      </div>
      <div class="form-group">
        <%=f.label :password %></br>
        <%= f.password_field :email, autocomplete: "off", :class=> "form-control", :placeholder => "Password" %>
      </div>
      <div class="form-group">
        <%=f.label :password_confirmation %></br>
        <%= f.password_field :password_confirmation, autocomplete: "off", :class=> "form-control", :placeholder => "Password confirmation" %>
      </div>
      <div><%= f.submit "Sign up", :class=>"btn btn-default" %></div>
      <div class="form-group">
        <%= render "devise/shared/links" %>
      </div>
      <%end%>
    </form>
    </div>
</div>
</section>